{
  "name": "bookmarked-backend",
  "version": "1.0.0",
  "description": "Backend API for Bookmarked application",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build": "NODE_OPTIONS='--max-old-space-size=4096' tsc",
    "build:clean": "rm -f tsconfig.tsbuildinfo && rm -rf dist && tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --exec 'tsx' src/server.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bookmarked-types": "file:../packages/bookmarked-types",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "kysely": "^0.28.2",
    "mongodb": "^6.17.0",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.7",
    "openai": "^5.20.1",
    "zod": "^3.22.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^6.4.14",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0"
  },
  "author": "Abir Hossain",
  "license": "MIT"
}
